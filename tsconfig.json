{
  "compilerOptions": {
    "module": "ES6",
    "lib": [
      "es6",
      "dom"
    ],
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types/",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "./**/*.ts+(|x)",
  ]
}
