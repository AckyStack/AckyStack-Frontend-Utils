{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "dist/types"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "./**/*.ts+(|x)"
  ]
}
